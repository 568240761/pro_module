<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/video_start"
            android:id="@+id/video_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/video_seekbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/video_current"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:background="@null"
            android:max="100"
            android:progressDrawable="@drawable/video_seekbar_progress"
            android:thumb="@drawable/video_seekbar_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/video_current"
            app:layout_constraintTop_toTopOf="@+id/video_current"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_more"
            android:textStyle="bold"
            style="@style/video_text_style_16_FFFFFF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="· · ·"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_duration"
            tools:text="1:23:45"
            style="@style/video_text_style_16_FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            style="@style/video_text_style_16_FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/video_duration"
            app:layout_constraintBaseline_toBaselineOf="@+id/video_duration"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3:45"
            style="@style/video_text_style_16_FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/text"
            app:layout_constraintBaseline_toBaselineOf="@+id/text"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/video_current"/>

    <TextView
            tools:text="小偷家族小偷家族小偷家族小偷家族小偷家族"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/video_title"
            style="@style/video_text_style_16_FFFFFF"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/video_more"
            app:layout_constraintBottom_toBottomOf="@+id/video_more"
            app:layout_constraintTop_toTopOf="@+id/video_more"
            app:layout_constraintStart_toEndOf="@+id/video_back"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/video_back"
            android:id="@+id/video_back"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/video_title"
            app:layout_constraintTop_toTopOf="@+id/video_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>